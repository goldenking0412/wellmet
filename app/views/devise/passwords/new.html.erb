<link rel="stylesheet" href="/admin.css">
<link rel="stylesheet" href="/bootstrap.min.css">
<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0"/>
<div class="block block-customer-login forgot-page col-lg-5 col-md-5 col-xs-10 col-sm-6">
<div class="forgotpassword-page">
<div class="row">
    <span class="block-title">
	      <%=image_tag("wellmetlogo.png")%>
    </span>
	</div>
<h2 class="login-header">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%=image_tag("Bitmap.png")%>
    <!---<%= f.label :email %>--->
    <%= f.email_field :email, autofocus: true , placeholder: 'Email Address'%>
    <span class="highlight"></span>
    <span class="bar"></span>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
