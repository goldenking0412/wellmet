<link rel="stylesheet" href="/admin.css">
<link rel="stylesheet" href="/bootstrap.min.css">
<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0"/>
<div class="block block-customer-login signup-page col-lg-5 col-md-5 col-xs-10 col-sm-6">
<div class="registration-page">
<div class="row">
    <span class="block-title">
	      <%=image_tag("wellmetlogo.png")%>
    </span>
	</div>
<h2 class="login-header">Sign up</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%=image_tag("Bitmap.png")%>
    <!---<%= f.label :email %>--->
    <%= f.email_field :email, autofocus: true , placeholder: 'Email'%>
    <span class="highlight"></span>
    <span class="bar"></span>
  </div>

  <div class="field">
    <%=image_tag("password.png")%> 
    <!---<%= f.label :password %>--->
    <%= f.password_field :password, autocomplete: "off" , placeholder: 'Password'%>
    <span class="highlight"></span>
    <span class="bar"></span>
    <% if @validatable %>
    <em style="font-size: 10px;">(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
  </div>

  <div class="field">
  <%=image_tag("password.png")%> 
    <!---<%= f.label :password_confirmation %>--->
    <%= f.password_field :password_confirmation, autocomplete: "off" , placeholder: 'Confirm Password' %>
    <span class="highlight"></span>
    <span class="bar"></span>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>